<h1>Lets Eat!</h1>

{{!-- When new burgers are added, the information from the database will be added to list. --}}
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

{{!-- This will submit the user input into the database --}}
<h2>Name a Burger!</h2>

<form class="burgerForm">
    <div class="inputBox">
        <label for="burger">Burger Name:</label>
        <textarea name="burgerName" id="message" cols="30" rows="10"></textarea>
    </div>

    <button id="submit" type="submit">Make a Burger</button>
</form>
