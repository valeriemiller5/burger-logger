<h1 id="header">Let's Eat!</h1>

{{!-- This will populate burger names from MySQL table "burgers" --}}
<div class="container" style="margin-left: 25%">
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      {{#each burgers}}
        {{#unless this.devoured}}
          <div>
            <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
              {{this.id}}. {{this.burger_name}}
              <button class="lets-eat">Devour!</button>
            </form>
          </div>
        {{/unless}}
      {{/each}}
    </div>
    
{{!-- This will list all burgers that have been devoured --}}
    <div class="col-md-6">
      {{#each burgers}}
        {{#if this.devoured}}
          <div class="devoured">
            {{this.id}}. {{this.burger_name}}
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>


{{!-- This will submit the user input into the database --}}
<h4 id="burgerName">Name a Burger!</h4>

<div class="row">
  <div class="col-md-12">
    <form class="burgerForm" method="POST">
      <div class="inputBox">
          <textarea name="newBurger" id="message" cols="30" rows="10"></textarea>
      </div>

      <button id="submit" type="submit">Make a Burger</button>
    </form> 
  </div>
</div>

